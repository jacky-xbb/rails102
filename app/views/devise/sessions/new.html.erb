<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field form-control w-full max-w-xs">
    <%= f.label :email, class: "label-text" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full max-w-xs" %>
  </div>

  <div class="field form-control w-full max-w-xs">
    <%= f.label :password, class: "label-text" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full max-w-xs" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions btn">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
